<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.AdminMapper">

    <select id="getAdminById" resultType="com.zb.pojo.Admin">
        select
                id as id,
                uid as uid,
                password as password,
                name as name
        from admin
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getAdminListByMap" resultType="com.zb.pojo.Admin" parameterType="java.util.Map">
        select
                id as id,
                uid as uid,
                password as password,
                name as name
        from admin
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="uid != null and uid!=''">
                    and uid=#{uid}
                </if>
                <if test="password != null and password!=''">
                    and password=#{password}
                </if>
                <if test="name != null and name!=''">
                    and name=#{name}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getAdminCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from admin
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="uid != null and uid!=''">
                    and uid=#{uid}
                </if>
                <if test="password != null and password!=''">
                    and password=#{password}
                </if>
                <if test="name != null and name!=''">
                    and name=#{name}
                </if>
        </trim>
    </select>

    <insert id="insertAdmin" parameterType="com.zb.pojo.Admin">
        insert into admin(
                        uid,
                        password,
                        name)
        values(
                     #{uid},
                     #{password},
                    #{name})
    </insert>

    <update id="updateAdmin" parameterType="com.zb.pojo.Admin">
        update admin
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="uid != null and uid!=''">
                            uid=#{uid},
                        </if>
                        <if test="password != null and password!=''">
                            password=#{password},
                        </if>
                        <if test="name != null and name!=''">
                            name=#{name}
                        </if>
        </trim>
    </update>
</mapper>