<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.UserMapper">

    <select id="getUserById" resultType="com.zb.pojo.User">
        select
                id as id,
                uid as uid,
                password as password,
                creatTime as creatTime,
                SAM as SAM,
                userImg as userImg,
                phone as phone
        from user
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getUserListByMap" resultType="com.zb.pojo.User" parameterType="java.util.Map">
        select
                id as id,
                uid as uid,
                password as password,
                creatTime as creatTime,
                SAM as SAM,
                userImg as userImg,
                phone as phone
        from user
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="uid != null and uid!=''">
                    and uid=#{uid}
                </if>
                <if test="password != null and password!=''">
                    and password=#{password}
                </if>
                <if test="creatTime != null and creatTime!=''">
                    and creatTime=#{creatTime}
                </if>
                <if test="SAM != null and SAM!=''">
                    and SAM=#{SAM}
                </if>
                <if test="userImg != null and userImg!=''">
                    and userImg=#{userImg}
                </if>
                <if test="phone != null and phone!=''">
                    and phone=#{phone}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getUserCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from user
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="uid != null and uid!=''">
                    and uid=#{uid}
                </if>
                <if test="password != null and password!=''">
                    and password=#{password}
                </if>
                <if test="creatTime != null and creatTime!=''">
                    and creatTime=#{creatTime}
                </if>
                <if test="SAM != null and SAM!=''">
                    and SAM=#{SAM}
                </if>
                <if test="userImg != null and userImg!=''">
                    and userImg=#{userImg}
                </if>
                <if test="phone != null and phone!=''">
                    and phone=#{phone}
                </if>
        </trim>
    </select>

    <insert id="insertUser" parameterType="com.zb.pojo.User">
        insert into user(
                        uid,
                        password,
                        creatTime,
                        SAM,
                        userImg,
                        phone)
        values(
                     #{uid},
                     #{password},
                     #{creatTime},
                     #{SAM},
                     #{userImg},
                    #{phone})
    </insert>

    <update id="updateUser" parameterType="com.zb.pojo.User">
        update user
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="uid != null and uid!=''">
                            uid=#{uid},
                        </if>
                        <if test="password != null and password!=''">
                            password=#{password},
                        </if>
                        <if test="creatTime != null and creatTime!=''">
                            creatTime=#{creatTime},
                        </if>
                        <if test="SAM != null and SAM!=''">
                            SAM=#{SAM},
                        </if>
                        <if test="userImg != null and userImg!=''">
                            userImg=#{userImg},
                        </if>
                        <if test="phone != null and phone!=''">
                            phone=#{phone}
                        </if>
        </trim>
    </update>
</mapper>